{
    "title": "Key mappings for playing games",
    "rules": [
        {
            "description": "Terraria: esc -> grave {{{",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "key_code": "escape" },
                    "to": { "key_code": "grave_accent_and_tilde" },
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [ "Terraria" ]
                    }]
                }
            ],
            "_comment": "}}}"
        },
        {
            "description": "Slay the Spire: mouse 4 -> esc {{{",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "pointing_button": "button4" },
                    "to": { "key_code": "escape" },
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [ "net.java.openjdk.cmd" ]
                    }]
                }
            ],
            "_comment": "}}}"
        },
        {
            "description": "Inscryption: mouse -> up and down {{{",
            "manipulators": [
                {
                    "type": "basic",
                    "from": { "pointing_button": "button4" },
                    "to": { "key_code": "down_arrow" },
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [ "Inscryption" ]
                    }]
                },
                {
                    "type": "basic",
                    "from": { "pointing_button": "button5" },
                    "to": { "key_code": "up_arrow" },
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": [ "Inscryption" ]
                    }]
                }
            ],
            "_comment": "}}}"
        }
    ]
}

