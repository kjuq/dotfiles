{
    "title": "Advanced key combinations",
    "rules": [
        {
            "description": "Ctrl + m -> return {{{",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "m",
                    "modifiers": {
                        "mandatory": "control",
                        "optional": "any"
                    }
                },
                "to": {
                    "key_code": "return_or_enter"
                }
            }],
            "_comment": "}}}"
        },

        {
            "description": "Ctrl + i -> Tab {{{",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "i",
                    "modifiers": {
                        "mandatory": "control",
                        "optional": "any"

                    }
                },
                "to": {
                    "key_code": "tab"
                }
            }],
            "_comment": "}}}"
        },

        {
            "description": "Emacs-like cursor movement {{{",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "n",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "down_arrow"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]}
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "left_arrow"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "p",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "up_arrow"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "right_arrow"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "delete_or_backspace"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "delete_or_backspace",
                        "modifiers": "fn"
                    },
                    "conditions": [{
                        "type": "frontmost_application_unless",
                        "bundle_identifiers": [
                            "org.alacritty",
                            "com.googlecode.iterm2"
                        ]
                    }]
                }
            ],
            "_comment": "}}}"
        },

        {
            "description": "Switching desktop by mouse {{{",
            "manipulators": [
                {
                    "type": "basic",
                    "description": "Ctrl + Mouse 4 -> left desktop",
                    "from": {
                        "pointing_button": "button4",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "left_arrow",
                        "modifiers": "control"
                    }
                },
                {
                    "type": "basic",
                    "description": "Ctrl + Mouse 5 -> right desktop",
                    "from": {
                        "pointing_button": "button5",
                        "modifiers": { "mandatory": "control" }
                    },
                    "to": {
                        "key_code": "right_arrow",
                        "modifiers": "control"
                    }
                }
            ],
            "_comment": "}}}"
        },

        {
            "description": "Cmd + Esc -> Cmd + Tab {{{",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "escape",
                    "modifiers": {
                        "mandatory": [ "command" ],
                        "optional": [ "any" ]
                    }
                },
                "to": [{
                    "key_code": "tab",
                    "modifiers": [ "command" ]
                }]
            }],
            "_comment": "}}}"
        }
    ]
}


