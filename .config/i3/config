# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Keybinds {{{
# Super + Alt + Ctrl
set $sac Mod4+Mod1+Ctrl

# Kill Window
bindsym $sac+BackSpace kill

# Launch applications
bindsym $sac+Shift+m exec alacritty

# Screenshot like MacOS
bindsym $mod+Shift+3 exec --no-startup-id i3-scrot
bindsym $mod+Shift+4 --release exec --no-startup-id i3-scrot -s
bindsym $mod+Shift+5 --release exec --no-startup-id i3-scrot -w

# change focus
bindsym $sac+9 focus next

# move focused window (hjkl)
bindsym $sac+0 focus left
bindsym $sac+comma focus down
bindsym $sac+period focus up
bindsym $sac+7 focus right
bindsym $sac+Shift+0 move left
bindsym $sac+Shift+comma move down
bindsym $sac+Shift+period move up
bindsym $sac+Shift+7 move right

# dismiss notification
# bindsym $sac+m exec dunstctl close

# split orientation
bindsym $sac+s split h;exec notify-send 'tile horizontally'
bindsym $sac+v split v;exec notify-send 'tile vertically'
# bindsym $sac+Shift+s split toggle

# toggle fullscreen mode for the focused container
bindsym $sac+o fullscreen toggle

# Rescue builtin display
bindsym $sac+d exec xrandr | grep 'connected' | grep -v 'eDP-1' | cut -d ' ' -f 1 | xargs -I {} xrandr --output '{}' --off --output eDP-1 --auto --primary --rotate left

# toggle tiling / floating
bindsym $sac+l floating toggle

# # change focus between tiling / floating windows
# bindsym $sac+f focus mode_toggle

# # focus the parent container
# bindsym $sac+p focus parent

# move the currently focused window to the scratchpad
bindsym $sac+g move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window. If there are multiple scratchpad windows, this command cycles through them.
bindsym $sac+apostrophe scratchpad show

# Resize window (you can also use the mouse for that)
bindsym $sac+r mode "resize"
mode "resize" {
	bindsym h resize shrink width 5 px or 5 ppt
	bindsym k resize grow height 5 px or 5 ppt
	bindsym j resize shrink height 5 px or 5 ppt
	bindsym l resize grow width 5 px or 5 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

# Screen brightness controls
bindsym XF86MonBrightnessUp exec "brightnessctl set 10%+"
bindsym XF86MonBrightnessDown exec "brightnessctl set 10%-"

# Audio adjustment
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume @DEFAULT_SINK@ +5%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume @DEFAULT_SINK@ -5%"
bindsym XF86AudioMute exec "pactl set-sink-mute @DEFAULT_SINK@ toggle"

# End: Keybinds }}}

# Workspace {{{
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9

set $wskey1 backslash
set $wskey2 semicolon
set $wskey3 bracketright
set $wskey4 bracketleft
set $wskey5 slash
set $wskey6 grave
set $wskey7 equal
set $wskey8 minus

# switch to workspace
bindsym $sac+$wskey1 workspace 1
bindsym $sac+$wskey2 workspace 2
bindsym $sac+$wskey3 workspace 3
bindsym $sac+$wskey4 workspace 4
bindsym $sac+$wskey5 workspace 5
bindsym $sac+$wskey6 workspace 6
bindsym $sac+$wskey7 workspace 7
bindsym $sac+$wskey8 workspace 8

# Move to workspace with focused container
bindsym Shift+$sac+$wskey1 move container to workspace 1; workspace $ws1
bindsym Shift+$sac+$wskey2 move container to workspace 2; workspace $ws2
bindsym Shift+$sac+$wskey3 move container to workspace 3; workspace $ws3
bindsym Shift+$sac+$wskey4 move container to workspace 4; workspace $ws4
bindsym Shift+$sac+$wskey5 move container to workspace 5; workspace $ws5
bindsym Shift+$sac+$wskey6 move container to workspace 6; workspace $ws6
bindsym Shift+$sac+$wskey7 move container to workspace 7; workspace $ws7
bindsym Shift+$sac+$wskey8 move container to workspace 8; workspace $ws8

# Move window to other displays (Super + Alt)
bindsym $sac+p move workspace to output up
bindsym $sac+n move workspace to output down
bindsym $sac+f move workspace to output right
bindsym $sac+b move workspace to output left

# Open applications on specific workspaces
# To get class name, `xprop | grep WM_CLASS`

# +---+---+---+---+---+
# |   | 8 | 7 | 6 |   |
# +---+---+---+---+---+
# |   | 5 | 4 | 3 |   |
# +---+---+---+---+---+
# |   |   |   | 2 | 1 |
# +---+---+---+---+---+

# Open specific applications in floating mode
# for_window [title="File Transfer*"] floating enable
for_window [class="FloatingVim"] floating enable
for_window [window_role="GtkFileChooserDialog"] floating disable

# github.com/toppair/peek.nvim
no_focus [title="^Peek preview$"]

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes

# End: Workspace }}}

# Misc {{{
# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 2
default_floating_border pixel

focus_wrapping no

# Hide borders
hide_edge_borders none

# Set inner/outer gaps
gaps inner 6
gaps outer -2

# Smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

## Use Mouse+$mod to drag floating windows
floating_modifier $mod

focus_follows_mouse no

# Autostart
exec --no-startup-id dex --autostart --environment i3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:HackNerdFontMono 10

# Theme colors
# class                 border  backgr. text    indic.   child_border
client.focused          #cc241d #282828 #ebdbb2 #cc241d  #cc241d
client.focused_inactive #2F3D44 #2F3D44 #1ABC9C #454948
client.unfocused        #2F3D44 #2F3D44 #1ABC9C #454948
client.urgent           #fb4934 #282828 #ebdbb2 #fb4934  #fb4934
client.placeholder      #000000 #0c0c0c #ffffff #000000
client.background       #2B2C2B

# End: Misc }}}
