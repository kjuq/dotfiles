#!/usr/bin/env bash

if ! command -v w3m &> /dev/null; then
	echo "Error: 'w3m' not found"
	return 1
fi
if [ $# -ne 2 ]; then
	echo -e "Error: Invalid argument.\nUsage: acw abc290 a"
	return 1
fi

sed_str="s/\\\\leq/<=/g;"
sed_str+="s/\\\\geq/>=/g;"
sed_str+="s/\\\\dots/.../g;"
sed_str+="s/\\\\ldots/.../g;"

w3m "https://atcoder.jp/contests/$1/tasks/$1_$2" | sed "$sed_str" | less
